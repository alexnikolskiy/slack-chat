<li class="message message_editing data-id="{{id}}">
  <div class="message__avatar">
    <img class="message__avatar-image" src="{{avatar}}">
  </div>
  <div class="message__content">
    <div class="message__editor">
      <div class="message__editor-input-container">
        <textarea class="message__editor-input" rows="1">{{{text}}}</textarea>
      </div>
      <div class="message__editor-footer">
        <button class="button" data-action="cancel">Cancel</button>
        <button class="button button_primary" data-action="save">Save changes</button>
      </div>
    </div>
  </div>
</li>
