{
  "name": "slack-chat",
  "version": "1.0.1",
  "main": "index.js",
  "description": "Chat like Slack on Socket.io & MongoDB",
  "author": "Alexander Nikolskiy",
  "license": "ISC",
  "scripts": {
    "stylelint": "npx stylelint \"src/sass/**/*.scss\"",
    "lint": "npx eslint \"**/*.js\"",
    "lint:fix": "npx eslint \"**/*.js\" --fix",
    "start": "cross-env NODE_ENV=development nodemon --ignore src/ --ignore build/ index.js",
    "dev": "cross-env NODE_ENV=development npx gulp dev",
    "build": "cross-env NODE_ENV=production npx gulp build",
    "test": "jest src/js/",
    "test:watch": "jest src/js/ --watch"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^Templates/(.*)": "<rootDir>/src/templates/build/$1",
      "^Utils/(.*)": "<rootDir>/src/js/utils/$1"
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^2.0.3",
    "date-fns": "^1.30.1",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "handlebars": "^4.1.0",
    "md5": "^2.2.1",
    "mongoose": "^5.4.3",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.5",
    "browser-sync": "^2.26.3",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean-css": "^4.0.0",
    "gulp-define-module": "^0.1.5",
    "gulp-eslint": "^5.0.0",
    "gulp-handlebars": "^5.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-load-plugins": "^1.5.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sass-glob": "^1.0.9",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-stylelint": "^8.0.0",
    "gulp-svgstore": "^7.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.1",
    "node-normalize-scss": "^8.0.0",
    "nodemon": "^1.18.9",
    "posthtml-include": "^1.2.0",
    "prettier": "^1.16.3",
    "stylelint": "^9.9.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^2.0.0",
    "stylelint-scss": "^3.4.4",
    "webpack": "^4.28.1",
    "webpack-stream": "^5.2.1"
  }
}
